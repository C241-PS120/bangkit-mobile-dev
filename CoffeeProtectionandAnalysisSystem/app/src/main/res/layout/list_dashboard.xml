<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_history"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/image_history"
            android:background="@drawable/rounded_rectangle"
            android:ellipsize="end"
            android:fontFamily="@font/mirza_semibold"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Judul History" />

        <TextView
            android:id="@+id/description_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_artikel"
            android:layout_toEndOf="@id/image_history"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Coptas mendeteksi adanya penyakit pada daun kopi" />

        <TextView
            android:id="@+id/date_history"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_history"
            android:layout_marginStart="123dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/image_history"
            android:background="@drawable/title_background"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="12/12/2021" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>