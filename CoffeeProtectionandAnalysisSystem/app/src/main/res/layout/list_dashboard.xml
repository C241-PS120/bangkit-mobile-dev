<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_artikel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_artikel"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/mirza_semibold"
            android:textColor="@android:color/white"
            android:background="@drawable/title_background"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Judul Artikel" />

        <TextView
            android:id="@+id/description_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_artikel"
            android:layout_below="@id/title_artikel"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
